{
  "name": "gluestick-packages",
  "scripts": {
    "lerna": "lerna",
    "yarn:install": "lerna exec --concurrency=1 -- yarn",
    "install:npm": "npm install && lerna bootstrap",
    "install:yarn": "yarn && npm run yarn:install && lerna bootstrap --concurrency=1",
    "clean": "lerna clean --yes",
    "test": "lerna exec --concurrency=1 -- npm run test -- --bail --no-cache",
    "test-coverage": "lerna exec --concurrency=1 -- npm run test -- --bail --coverage --no-cache",
    "lint": "eslint .",
    "flow": "flow",
    "ci": "npm run lint && npm run flow && npm run test-coverage",
    "publish": "./scripts/deploy.js"
  },
  "dependencies": {
    "lerna": "2.0.0-beta.37"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.38.0"
  }
}
