{
  "name": "gluestick-packages",
  "scripts": {
    "lerna": "lerna",
    "yarn:install": "lerna exec --concurrency=1 -- yarn",
    "install:npm": "npm install && npm run build && lerna bootstrap",
    "install:yarn": "yarn && npm run build && npm run yarn:install && lerna bootstrap --concurrency=1",
    "clean": "lerna clean --yes",
    "test": "lerna exec --concurrency=1 -- npm run test -- --bail",
    "test-coverage": "lerna exec --concurrency=1 -- npm run test -- --bail --coverage",
    "lint": "eslint .",
    "flow": "flow",
    "ci": "npm run lint && npm run flow && npm run test-coverage",
    "publish": "npm run build && ./scripts/deploy.js",
    "e2e": "CI_PULL_REQUEST=$CI_PULL_REQUEST CIRCLE_BRANCH=$CIRCLE_BRANCH ./scripts/e2e/runner.js",
    "build": "node ./scripts/build.js"
  },
  "dependencies": {
    "lerna": "2.0.0-rc.5"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-preset-env": "1.4.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.45.0",
    "flow-copy-source": "1.1.0",
    "glob": "7.1.1",
    "mkdirp": "0.5.1",
    "node-fetch": "1.6.3",
    "rimraf": "2.6.1"
  }
}
